                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimaryDark" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llPictureParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvImageTitleBefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Picture of Before"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imgSnapBefore"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/image_name"
                            android:src="@drawable/ic_image_add_dark_holo_64" />

                        <TextView
                            android:id="@+id/tvAttachSnapPathBefore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/select_image"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvImageTitleAfter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Picture of After"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imgSnapAfter"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/image_name"
                            android:src="@drawable/ic_image_add_dark_holo_64" />

                        <TextView
                            android:id="@+id/tvAttachSnapPathAfter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/select_image"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_left"
                        android:text="@string/reset"
                        android:textAllCaps="true"
                        android:textColor="@android:color/background_light"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="2dip"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_light" />
                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_right"
                        android:text="@string/submit"
                        android:textAllCaps="true"
                        android:textColor="@android:color/background_light"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
