<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="96dp">

            <in.enzen.taskforum.civ.CircleImageView
                android:id="@+id/civUserPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_circle_background"
                android:contentDescription="@string/user_image"
                android:padding="4dp"
                android:src="@drawable/avatar_default"/>

            <ImageView
                android:id="@+id/imgUploadNewPic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="0dp"
                android:background="@drawable/background_app_color_circle"
                android:contentDescription="@string/user_image"
                android:padding="1dp"
                android:src="@drawable/ic_upward_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/user_name"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/button_background_dark_solid_with_light_strok"
        android:paddingBottom="6dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="6dp"
        android:text="@string/change_password"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="17sp" />

</LinearLayout>